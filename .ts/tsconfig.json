{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "out",
        "esModuleInterop": true,
        "noEmit": true,
        "noEmitOnError": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "include": ["src"]
}
